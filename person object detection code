import cv2
import numpy as np
import random
import time
from ultralytics import YOLO

try:
    import pyrealsense2 as rs
    use_realsense = True
except ImportError:
    use_realsense = False # if u want to use real sense make this true
models = [
   YOLO(r"D:\new objects\bottle final\bottle.v1\runs\detect\train5\weights\best.pt"),
   YOLO(r"D:\person detection-20250719T153046Z-1-001\person detection\runs\detect\train\weights\best.pt")
]

# Store stable colors per label
stable_colors = {}

def get_stable_color(label_name):
    if label_name not in stable_colors:
        # Dark colors only so white text is visible
        stable_colors[label_name] = tuple(random.randint(0, 180) for _ in range(3))
    return stable_colors[label_name]

if use_realsense:
    pipeline = rs.pipeline()
    config = rs.config()
    config.enable_stream(rs.stream.color, 640, 480, rs.format.bgr8, 30)
    pipeline.start(config)
else:
    cap = cv2.VideoCapture(0, cv2.CAP_DSHOW)
    if not cap.isOpened():
        raise SystemExit("‚ùå Cannot access webcam")

cv2.namedWindow("YOLOv11n Detection", cv2.WINDOW_NORMAL)
print("üîÅ Press 'q' to quit...")

CONF_THRESHOLD = 0.3

while True:
    if use_realsense:
        frames = pipeline.wait_for_frames()
        color_frame = frames.get_color_frame()
        if not color_frame:
            continue
        frame = np.asanyarray(color_frame.get_data())
    else:
        ret, frame = cap.read()
        if not ret:
            break

    used_colors = []

    for model_index, model in enumerate(models):
        results = model.predict(frame, conf=CONF_THRESHOLD, verbose=False)[0]
        for box in results.boxes:
            x1, y1, x2, y2 = map(int, box.xyxy[0])
            conf = float(box.conf)
            if conf < CONF_THRESHOLD:
                continue
            cls = int(box.cls)
            label_name = model.names[cls]
            label = f"{label_name} {conf*100:.1f}%"

            # Get dark stable color
            color = get_stable_color(label_name)

            # If color already used, tweak it slightly but keep it dark
            while color in used_colors:
                color = tuple(min(180, (c + random.randint(20, 60)) % 256) for c in color)

            used_colors.append(color)

            cv2.rectangle(frame, (x1, y1), (x2, y2), color, 3)
            (tw, th), _ = cv2.getTextSize(label, cv2.FONT_HERSHEY_SIMPLEX, 0.8, 2)
            cv2.rectangle(frame, (x1, y1 - th - 10), (x1 + tw, y1), color, -1)
            cv2.putText(frame, label, (x1, y1 - 5), cv2.FONT_HERSHEY_SIMPLEX, 0.8, (255, 255, 255), 2)

    cv2.imshow("YOLOv11n Detection", frame)

    if cv2.getWindowProperty("YOLOv11n Detection", cv2.WND_PROP_VISIBLE) < 1:
        break
    if cv2.waitKey(1) & 0xFF == ord('q'):
        break

if use_realsense:
    pipeline.stop()
else:
    cap.release()
cv2.destroyAllWindows()

